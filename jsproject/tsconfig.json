{
  "compilerOptions": {
    "noEmit": true, 
    "allowJs": true,
    "checkJs": false,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "types": ["vue"],
    "plugins": [{ "name": "@vue/typescript-plugin" }]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
