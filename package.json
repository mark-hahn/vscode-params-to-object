{
  "name": "params-to-object",
  "displayName": "Objectify Params",
  "description": "VS Code extension to convert function params into objects.",
  "version": "0.0.1",
  "publisher": "eridien",
  "engines": {
    "vscode": "^1.50.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "objectifyParams.convert",
        "title": "Convert params to object"
      },
      {
        "command": "objectifyParams.checkFunctions",
        "title": "Check functions for reliable refactor"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Params to Object",
      "properties": {
        "objectifyParams.include": {
          "type": "string",
          "default": "**/*.ts **/*.js",
          "description": "Space-separated glob patterns of files to include when scanning (use common glob format)."
        },
        "objectifyParams.exclude": {
          "type": "string",
          "default": "**/node_modules/**",
          "description": "Space-separated glob patterns of files/folders to exclude when scanning."
        }
      }
    }
  },
  "dependencies": {
    "glob": "^13.0.0",
    "ts-morph": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/glob": "^7.2.0",
    "@types/node": "^14.18.0",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.50.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "vscode:prepublish": "echo prepublish",
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -w",
    "lint": "eslint"
  }
}